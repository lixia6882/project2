/**index.wxss**/
page{
  width: 100%;
  height: 100%;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 221rpx;
  height:221rpx;
  margin-top: 180rpx;
  margin-bottom: 90rpx;
}
.container{
    width: 100%;
    height: 100%;
    position: relative;
}
.back{
  width: 100%;
  height: 100%;
  position:absolute;
  top: 0;
  left: 0;
  z-index: -1;
}
.usermotto{
  width: 74%;
  height: 60rpx;
  display: flex;
  margin:0 auto;
  margin-bottom: 40rpx;
}
.username{
  width: 60rpx;
  height: 60rpx;
  display: inline-block;
  margin-right: 20rpx;
}
.deng{
 flex: 1;
 border-bottom: 1px solid #f23861;
 font-size: 30rpx;
 padding-left: 10rpx;
 color:#333;
}
.usermotto_auto{
  width: 85%;
  height: 60rpx;
  display: flex;
  justify-content:flex-end;
  font-size: 30rpx;
  color: #e4596c; 
  margin-bottom:20rpx;
 
}
.username_auto{
  width: 33rpx;
  height: 33rpx;
  vertical-align: middle;
  margin-top: 4rpx;
}
.enter{
  width: 76%;
  height: 78rpx;
  margin: 0 auto;
  margin-bottom:30rpx; 
}
.enter_btn{
   width: 100%;
   height: 100%;
   background:#f23861;
   border:1px solid #e40033;
   color: #fff;
   border-radius: 40rpx;
   display: flex;
   justify-content:center;
   line-height: 78rpx;
}
.login{
  width: 74%;
  height:78rpx;
  display: flex;
  justify-content:center;
  margin-bottom:30rpx; 
  color:#f23861;
  margin: 0 auto;
  align-items: center;
  border-radius: 40rpx;
  border:1px solid #e40033;  
}
