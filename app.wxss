/**app.wxss**/
page{
  width: 100%;
  height: 100%;
  font-family: "微软雅黑";
  position: relative;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}
.po{
  font-size: 30rpx;
  z-index: 11000;
  color: #fff;
  margin: 0 auto;
  text-align: center;
  margin-top:60rpx;
}
.po_bug{
  font-size: 28rpx;
  z-index: 11000;
  color: #fff;
  position: absolute;
  left: 0;
  top: 0;
  background: red;
  width: 100%;
  height: 63rpx;
  text-align: center;
  line-height: 63rpx;
}
.text{
  background:#000;
  opacity:0.3;
  padding:20rpx 15rpx;
  border-radius:20rpx 20rpx;

}
.hide{
  display: none;
}
.show{
  display: block;
}
.loading{
  width: 100%;
	height: 100%;
  position: fixed;
	background: #000;
	opacity: 0.5;
	z-index: 223;
}
.loadings{
  width: 140rpx;
	height: 140rpx;
	position: absolute;
	left: 50%;
	top: 50%;
	margin-top: -70rpx;
	margin-left: -70rpx;
	z-index: 10000;
}